generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:admin@localhost:3306/skincs"
}

model User {
  id      Int     @id @default(autoincrement())
  nome    String
  email   String  @unique
  senha   String

  // Relacionamentos
  profile Profile?   // <- um-para-um (opcional)
  orders  Order[]    // <- um-para-muitos (lista de pedidos)
}

model Profile {
  id        Int     @id @default(autoincrement())
  bio       String
  userId    Int     @unique  // ← Adicione @unique aqui
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Order {
  id        Int     @id @default(autoincrement())
  item      String
  userId    Int     // Campo obrigatório
  user      User    @relation(fields: [userId], references: [id])
}