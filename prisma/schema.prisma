}

datasource db {
  provider = "mysql"
  url      = "mysql://root:admin@localhost:3306/skincs"
}

model User {
  id      Int     @id @default(autoincrement()) // ID autoincremental (padr√£o MySQL)
  nome    String
  email   String  @unique
  senha   String
